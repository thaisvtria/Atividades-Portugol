programa {
  funcao inicio() {
    //Declaração de variáveis - comentário de uma linha
    cadeia nome
    inteiro idade
    real altura

    //Atribuição com comando leia()
    escreva("Digite o seu nome: ")
    leia(nome)
    escreva("Digite a sua idade: ")
    leia(idade)
    escreva("Digite a sua altura: ")
    leia(altura)
    

    escreva("nome: ", nome)
    escreva("\nidade: ", idade)
    escreva("\nAltura: ", altura)
  }
}
