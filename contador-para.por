programa {
  funcao inicio() {
    escreva("Contador de 1 a 100:\n\n")
 //para / for - repeticao com contador
 para (inteiro i=0; i<=100; i++){
  escreva("número: ", i , "\n")
 }

  escreva("Contagem regressiva de 100 a 1:\n\n")
  para (inteiro i=100; i>=0; i--){
  escreva("número: ", i , "\n")
 }
  }
}
